@{
    ViewData["Title"] = "Chat";

}



@if (User.IsInRole("Admin"))
{
    <input hidden value="@ViewBag.CurrentUserName" id="userName" />
    <div>
        <div>
            <div class="row container d-flex justify-content-center">
                <div class="col-md-3">
                    <div class="row border">
                        <div class="col-md-12">
                            <div class="card p-1">UserName</div>
                        </div>
                        <div class="col-md-12">
                            <div>UserName</div>
                        </div>
                        <div class="col-md-12">
                            <div>UserName</div>
                        </div>
                        <div class="col-md-12">
                            <div>UserName</div>
                        </div>

                    </div>

                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Admin Chat</h4>
                        </div>
                        <div class="chatContainer">
                            <ul id="chat-content"></ul>

                        </div>
                        <div class="d-flex">
                            <input class="input-group col-sm-10" type="text" placeholder="Write something" id="message">
                            <button class="btn btn-success col-sm-2" id="sendMess">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

else
{

    <input hidden value="@ViewBag.CurrentUserName" id="userName" />
    <div>
        <div>
            <div class="row container d-flex justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>User Chat</h4>
                        </div>
                        <div class="chatContainer" id="chat-content">


                        </div>
                        <div class="d-flex">
                            <input class="input-group col-sm-10" type="text" placeholder="Write something" id="message">
                            <button class="btn btn-success col-sm-2" id="sendMess">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
